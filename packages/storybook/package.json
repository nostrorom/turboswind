{
	"name": "storyswind",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"bump": "ncu -u"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.32.0",
		"@sveltejs/kit": "^1.14.0",
		"@sveltejs/package": "^2.0.2",
		"@turboswind/eslint-config": "workspace:*",
		"@turboswind/prettier": "workspace:*",
		"@turboswind/tsconfig": "workspace:*",
		"publint": "^0.1.11",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"tslib": "^2.5.0",
		"typescript": "5.0.2",
		"vite": "^4.2.1",
		"vitest": "^0.29.7",
		"@storybook/addon-essentials": "7.0.0-rc.3",
		"@storybook/addon-interactions": "7.0.0-rc.3",
		"@storybook/addon-links": "7.0.0-rc.3",
		"@storybook/addon-styling": "^0.3.2",
		"@storybook/blocks": "7.0.0-alpha.8",
		"@storybook/svelte": "7.0.0-rc.3",
		"@storybook/sveltekit": "7.0.0-alpha.58",
		"@storybook/testing-library": "0.0.14-next.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"storybook": "7.0.0-rc.3",
		"tailwindcss": "^3.2.7"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
